{
  "name": "mpanel",
  "version": "1.0.0",
  "description": "Control Panel for Web Hosting - Multi-tenant billing and management platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server-ts.ts",
    "dev:legacy": "node --watch src/server.js",
    "build": "tsc && npm run build:mpanel",
    "build:backend": "tsc",
    "build:mpanel": "npm --prefix frontend run build",
    "server:dev": "npm run dev",
    "start": "node dist/server-ts.js",
    "start:ts": "tsx src/server-ts.ts",
    "start:legacy": "node src/server.js",
    "server:start": "npm run start --",
    "migrate": "node src/db/migrate.js",
    "server:migrate": "npm run migrate",
    "ssl-worker": "node src/workers/sslWorker.js",
    "ssl-worker:dev": "node --watch src/workers/sslWorker.js",
    "worker:guardian:ts": "tsx src/jobs/runGuardianSecurityWorker.ts",
    "worker:guardian": "node dist/jobs/runGuardianSecurityWorker.js",
    "test": "node --test src/tests/**/*.test.js",
    "test:watch": "node --watch --test src/tests/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage src/tests/**/*.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "docker:build": "docker build -t mpanel-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ci:test": "npm run test:coverage",
    "ci:lint": "npm run lint && npm run format:check",
    "deploy:mpanel-core": "bash ~/deploy_migrapanel_ui_to_mpanel_core.sh",
    "seed:products": "tsx prisma/seedProductsFromConfig.ts",
    "shield:seed": "tsx scripts/shield/seedShieldPolicy.ts",
    "shield:smoke": "tsx scripts/shield/shieldSmokeTest.ts",
    "smoke-test": "tsx scripts/smoke-test.ts",
    "smoke-test:production": "tsx scripts/smoke-test.ts --env=production",
    "smoke-test:staging": "tsx scripts/smoke-test.ts --env=staging",
    "db:backup": "bash scripts/backup.sh",
    "db:test": "tsx scripts/test-db-connection.ts",
    "cleanup:idempotency": "tsx scripts/cleanup-idempotency-keys.ts",
    "postinstall": "npm --prefix frontend install"
  },
  "keywords": [
    "hosting",
    "billing",
    "multi-tenant",
    "control-panel",
    "whmcs-alternative"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cloudfront": "^3.712.0",
    "@aws-sdk/client-s3": "^3.712.0",
    "@google-cloud/storage": "^7.17.3",
    "@kubernetes/client-node": "^1.4.0",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@prisma/extension-accelerate": "^3.0.0",
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.25.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "acme-client": "^5.4.0",
    "adm-zip": "^0.5.16",
    "apollo-server-express": "^3.13.0",
    "archiver": "^7.0.1",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "bullmq": "^5.28.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "extract-zip": "^2.0.1",
    "graphql": "^16.9.0",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.0",
    "mime-types": "^2.1.35",
    "minio": "^8.0.2",
    "mongodb": "^6.12.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "openai": "^4.77.3",
    "pdfkit": "^0.17.2",
    "pdfmake": "^0.2.20",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^17.4.0",
    "tar": "^7.4.3",
    "twilio": "^5.10.5",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "eslint": "^9.17.0",
    "prisma": "^7.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
