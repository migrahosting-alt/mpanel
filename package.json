{
  "name": "mpanel",
  "version": "1.0.0",
  "description": "Control Panel for Web Hosting - Multi-tenant billing and management platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development node --watch src/server.js",
    "server:dev": "npm run dev",
    "start": "NODE_ENV=production node src/server.js",
    "server:start": "npm run start --",
    "migrate": "node src/db/migrate.js",
    "server:migrate": "npm run migrate",
    "ssl-worker": "NODE_ENV=production node src/workers/sslWorker.js",
    "ssl-worker:dev": "NODE_ENV=development node --watch src/workers/sslWorker.js",
    "test": "NODE_ENV=test node --test src/tests/**/*.test.js",
    "test:watch": "NODE_ENV=test node --watch --test src/tests/**/*.test.js",
    "test:coverage": "NODE_ENV=test node --test --experimental-test-coverage src/tests/**/*.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "docker:build": "docker build -t mpanel-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ci:test": "npm run test:coverage",
    "ci:lint": "npm run lint && npm run format:check"
  },
  "keywords": [
    "hosting",
    "billing",
    "multi-tenant",
    "control-panel",
    "whmcs-alternative"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "acme-client": "^5.4.0",
    "adm-zip": "^0.5.10",
    "apollo-server-express": "^3.13.0",
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.63.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "extract-zip": "^2.0.1",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "minio": "^7.1.3",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "openai": "^6.8.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.12",
    "speakeasy": "^2.0.0",
    "stripe": "^14.12.0",
    "tar": "^7.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
